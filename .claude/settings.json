{
  "cleanupPeriodDays": 30,
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "8000",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "DISABLE_COST_WARNINGS": "1",
    "USE_BUILTIN_RIPGREP": "1",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "0",
    "DISABLE_TELEMETRY": "1",
    "BASH_DEFAULT_TIMEOUT_MS": "120000",
    "BASH_MAX_TIMEOUT_MS": "600000",
    "BASH_MAX_OUTPUT_LENGTH": "100000"
  },
  "includeCoAuthoredBy": true,
  "permissions": {
    "allow": [
      "Edit",
      "Write",
      "WebSearch",
      "WebFetch",
      "Bash(git:*)",
      "Bash(docker:*)",
      "Bash(python:*)",
      "Bash(uv:*)",
      "Bash(just:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git log:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr status:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr merge:*)",
      "Bash(gh pr edit:*)",
      "Bash(gh pr comment:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue status:*)",
      "Bash(gh run view:*)",
      "Bash(gh repo view:*)",
      "Bash(gh api:*)",
      "Bash(gh browse:*)",
      "Bash(gh search:*)",
      "Bash(search:*)",
      "Bash(agentctl:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(less:*)",
      "Bash(file:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(cut:*)",
      "Bash(awk:*)",
      "Bash(sed:*)",
      "Bash(tr:*)",
      "Bash(ls:*)",
      "Bash(pwd)",
      "Bash(which:*)",
      "Bash(echo:*)",
      "Bash(basename:*)",
      "Bash(dirname:*)",
      "Bash(realpath:*)",
      "Bash(stat:*)",
      "Bash(tree:*)",
      "Bash(xargs:*)",
      "Bash(npm list:*)",
      "Bash(npm ls:*)",
      "Bash(pip list:*)",
      "Bash(pip show:*)",
      "Bash(poetry show:*)",
      "Bash(composer show:*)",
      "Bash(cargo tree:*)",
      "Bash(go list:*)",
      "Bash(bundle list:*)",
      "Bash(docker ps:*)",
      "Bash(docker images:*)",
      "Bash(kubectl get:*)",
      "Bash(kubectl describe:*)",
      "Bash(mkdir:*)",
      "Bash(mkdir -p:*)",
      "Bash(rm .claude/*)",
      "Bash(rm -rf .claude/*)",
      "Bash(rm src/*)",
      "Bash(rm -rf src/*)",
      "Bash(rm tests/*)",
      "Bash(rm -rf tests/*)",
      "Bash(rm hack/*)",
      "Bash(rm -rf hack/*)",
      "Skill(linear)",
      "Skill(ast-grep)",
      "Skill(research)",
      "Skill(semtool)",
      "Skill(skill-creator)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "mcp__linear__get_viewer",
      "mcp__linear__list_issues",
      "mcp__linear__get_issue",
      "mcp__linear__create_issue",
      "mcp__linear__update_issue",
      "mcp__linear__list_projects",
      "mcp__linear__get_project",
      "mcp__linear__list_teams",
      "mcp__linear__get_team",
      "mcp__linear__add_comment"
    ],
    "ask": [
      "Bash(sudo:*)"
    ],
    "defaultMode": "default",
    "additionalDirectories": [
      "~/.claude/workspaces",
      "/tmp"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "agentctl hook context-info"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "agentctl hook notify-input"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "agentctl hook notify-stop"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "agentctl hook post-edit"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "agentctl hook post-write"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "agentctl hook context-info"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  }
}
